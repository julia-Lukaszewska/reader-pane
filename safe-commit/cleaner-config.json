{
  "extensions": [
    "js",
    "ts",
    "jsx",
    "tsx",
    "html",
    "css",
    "json",
    "md",
    "yml",
    "yaml"
  ],
  "tagPatterns": [
    "//#PL:.*?#\\/",
    "/\\*\\s*//#PL:.*?#\\/\\s*\\*/",
    "(?<=/\\*[^]*?)//#PL:.*?#\\/(?=[^]*?\\*/)",
    "<!--\\s*//#PL:.*?#\\/\\s*-->",
    "(?<=<!--[^]*?)//#PL:.*?#\\/(?=[^]*?-->)",
    "\\{\\/\\*\\s*//#PL:.*?#\\/\\s*\\*\\/\\}",
    "(?<=\\{\\/\\*[^]*?)//#PL:.*?#\\/(?=[^]*?\\*\\/\\})"
  ],
  "emptyCommentPatterns": ["/\\*\\s*\\*/", "\\{\\s*\\}", "<!--\\s*-->"]
}
